{
  "name": "containermarkets.info",
  "version": "0.1.0",
  "description": "Aggregator for shipping container markets",
  "main": "index.js",
  "scripts": {
    "css:build": "./bin/build-css",
    "css:watch": "./bin/watch-css",
    "db:setup": "./bin/reset-db && node src/db/setup.js",
    "db:test:setup": "./bin/reset-test-db && NODE_ENV=test node src/db/setup.js",
    "db:dev:setup": "npm run db:setup && npm run db:test:setup",
    "start": "node index.js",
    "test": "find ./src -name '*.test.js' | NODE_ENV=test xargs mocha ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rpearce/containermarkets.info.git"
  },
  "author": "Robert Pearce <me@robertwpearce.com> (http://robertwpearce.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rpearce/containermarkets.info/issues"
  },
  "homepage": "https://github.com/rpearce/containermarkets.info#readme",
  "dependencies": {
    "koa": "^2.0.0",
    "koa-body": "^1.4.0",
    "koa-compress": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-csrf": "^2.4.0",
    "koa-logger": "^2.0.0",
    "koa-route": "^3.1.0",
    "koa-session": "^3.3.1",
    "koa-static": "^2.0.0",
    "massive": "^2.2.0",
    "pg": "^4.5.5"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^2.4.5",
    "node-sass": "^3.6.0",
    "nodemon": "^1.9.2",
    "sinon": "^1.17.4",
    "supertest": "^1.2.0"
  }
}
